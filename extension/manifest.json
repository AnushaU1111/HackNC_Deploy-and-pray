{
    "manifest_version": 3,
    "name": "Sycophancy Shield",
    "version": "1.0",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "http://localhost:5000/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*",
                "https://claude.ai/*"
            ],
            "js": [
                "content.js",
                "inject_ui.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}